<div class="breadcrumb">
    <ul class="task">
        <li class="home"><a href="http://localhost/webbangiay/">Trang chủ</a></li>
        <li class="slash"><p href="">Chi tiết giỏ hàng</p></li>
    </ul>
</div>
<div class="tt">
    <a>Giỏ hàng</a>
</div>
<div class="qcs">
    <div class="bor">
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                {% for items in shoe_Cart %}
                    <tr>
                        <td style="width: 65px">{{ loop.index }}</td>
                        <td style="width: 330px;">{{ items.getName() }}</td>
                        <td style="width: 135px;">
                            <img src="img/shoe/{{ items.getImgShow() }}" class="img-thumnail" alt style="width: 75px;height: 65px;">
                        </td>
                        <td style="display: flex;width: 160px;">
                            <a class="cart-sumsub" href="javascript:void(0)"   style="font-size: 18px;">-</a>
                                <input type="text" value="{{ items.getNumber() }}" style="width: 40px; text-align: center;height: 35px;">
                            <a class="cart-sumsub" href="javascript:void(0)" class="add_to_cart" items-id="{{ items.id|e }}" style="font-size: 18px;">+</a>
                        </td>
                        <td style="width: 190px">{{ items.getPrice() }} VNĐ</td>
                        <td style="width: 140px">
                            <a href="javascript:void(0)" class="delete_item"><span class="trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                    <tr>
                        <td colspan="4">Tổng tiền</td>
                        <td style="font-weight: bold;color: green;">{{ total_price }} VNĐ</td>
                        <td>
                            <a style="font-weight: bold;color: red;font-size: 17px;" href="javascript:void(0)" class="delete_all">Xóa toàn bộ</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <a href="javascript:void(0)" class="btn btn-success buy_all">Đặt mua</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <img src="../img/qc.png">
</div>